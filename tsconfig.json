{
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"]

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}